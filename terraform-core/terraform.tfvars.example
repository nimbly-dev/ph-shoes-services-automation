# Example values
aws_region   = "ap-southeast-1"
environment  = "prod"
project_name = "ph-shoes-services"

ecs_cluster_name     = "ph-shoes-services-ecs"
ecs_instance_type    = "t3.micro"
ecs_desired_capacity = 1

enable_cloudwatch_monitoring = true
enable_cloudwatch_dashboards = true
cloudwatch_alarm_email       = "your-email@example.com"

enable_enhanced_cloudwatch_dashboard = true
enhanced_dashboard_log_retention_days = 3
enhanced_dashboard_refresh_interval   = 300
enhanced_dashboard_max_widgets        = 32
enhanced_dashboard_api_budget         = 2900

enable_enhanced_free_tier_monitoring = true
enable_enhanced_security_monitoring  = true
enable_enhanced_ecs_monitoring       = true
enable_enhanced_query_optimization   = true

enhanced_dashboard_log_sampling_rate = 1.0
enable_cost_tracking                 = true

monitored_services = [
  "ph-shoes-alerts-service-web",
  "ph-shoes-catalog-service-web",
  "ph-shoes-text-search-service-web",
  "ph-shoes-user-accounts-service-web",
  "ph-shoes-data-spa-frontend"
]

github_owner = "your-github-org"
github_repositories = [
  "ph-shoes-services-automation",
  "ph-shoes-data-spa",
  "ph-shoes-catalog-service",
  "ph-shoes-alerts-service",
  "ph-shoes-user-accounts-service",
  "ph-shoes-search-services"
]
